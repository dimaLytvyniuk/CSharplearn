@page
@model EnglishProject.Pages.TaskInfos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TaskInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskInfo.ID" />
            <div class="form-group">
                <label asp-for="TaskInfo.UserID" class="control-label"></label>
                <select asp-for="TaskInfo.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="TaskInfo.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskInfo.EnglishTaskID" class="control-label"></label>
                <input asp-for="TaskInfo.EnglishTaskID" class="form-control" />
                <span asp-validation-for="TaskInfo.EnglishTaskID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskInfo.CorrectAnswers" class="control-label"></label>
                <input asp-for="TaskInfo.CorrectAnswers" class="form-control" />
                <span asp-validation-for="TaskInfo.CorrectAnswers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskInfo.DateComplete" class="control-label"></label>
                <input asp-for="TaskInfo.DateComplete" class="form-control" />
                <span asp-validation-for="TaskInfo.DateComplete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="TaskInfo.InCourse" /> @Html.DisplayNameFor(model => model.InCourse)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
